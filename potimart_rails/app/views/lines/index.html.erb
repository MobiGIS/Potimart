<h1>Recherche des itinéraires de la ligne</h1>

<table>
  <tr>
    <th>Nom</th>
    <th>Identifiant</th>
    <th>Nom publié</th>
    <th>Edition Indicateur Lignes</th>
    <th>Edition Indicateur arrêts</th>
  </tr>

<% @lines.each do |line| %>
  <tr>
    <td><%=h line.name %></td>
    <td><%=h line.number %></td>
    <td><%=h line.publishedname %></td>
    <td><%= link_to 'Editer', line_line_indicators_path(line) %></td>
    <td><%= link_to 'Editer', line_routes_path(line) %></td>
  </tr>
<% end %>
</table>
